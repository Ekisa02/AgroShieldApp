<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorOnSurface" android:alpha="0.12"> <!-- Subtle ripple on press -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="@color/deep_purple_1" /> <!-- Use theme's outline color for consistency -->
            <corners android:radius="12dp" /> <!-- More rounded for a modern look -->
        </shape>
    </item>

</ripple>