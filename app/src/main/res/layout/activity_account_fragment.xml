<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/surface_variant">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 𝗛𝗲𝗮𝗱𝗲𝗿 𝗦𝗲𝗰𝘁𝗶𝗼𝗻 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Profile Image with Badge -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_profile_placeholder"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:elevation="4dp"/>

                        <!-- Edit Pencil -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit"
                            android:background="@drawable/circle_accent_bg"
                            android:layout_alignBottom="@id/profileImage"
                            android:layout_alignEnd="@id/profileImage"
                            android:layout_marginEnd="-8dp"/>
                    </RelativeLayout>

                    <!-- Name & Membership -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alex Farmer"
                            android:textColor="@color/primary_text"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Premium Member"
                            app:chipBackgroundColor="@color/premium_gold"
                            app:chipIcon="@drawable/ic_premium"
                            app:chipIconTint="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Joined Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5K"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="@color/outline_variant"/>

                    <!-- Followers -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2K"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="@color/outline_variant"/>

                    <!-- Member Since -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Member Since"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 𝗔𝗰𝗰𝗼𝘂𝗻𝘁 𝗢𝗽𝘁𝗶𝗼𝗻𝘀 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="8dp"/>

                <!-- Options List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Personal Info -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/primary_icon"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Personal Information"
                        android:textColor="@color/primary_text"
                        app:iconGravity="start"/>

                    <!-- Notifications -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_notifications"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/primary_icon"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Notifications"
                        android:textColor="@color/primary_text"
                        app:iconGravity="start"/>

                    <!-- Payment -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_payment"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/primary_icon"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Payment Methods"
                        android:textColor="@color/primary_text"
                        app:iconGravity="start"/>

                    <!-- Security -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_security"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/primary_icon"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Security"
                        android:textColor="@color/primary_text"
                        app:iconGravity="start"/>

                    <!-- Help -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_help"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/primary_icon"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Help Center"
                        android:textColor="@color/primary_text"
                        app:iconGravity="start"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/outline_variant"/>

                    <!-- Logout -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/error"
                        android:gravity="start|center_vertical"
                        android:paddingStart="24dp"
                        android:text="Log Out"
                        android:textColor="@color/error"
                        app:iconGravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 𝗔𝗽𝗽 𝗦𝗲𝘁𝘁𝗶𝗻𝗴𝘀 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Settings"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="8dp"/>

                <!-- Dark Mode Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dark_mode"
                        app:tint="@color/primary_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Dark Mode"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>
                </LinearLayout>

                <!-- Language -->
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_language"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/primary_icon"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:text="Language: English"
                    android:textColor="@color/primary_text"
                    app:iconGravity="start"/>

                <!-- App Version -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AgroShield v2.4.1"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="16dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>