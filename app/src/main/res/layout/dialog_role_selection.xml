<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to proceed?"
        android:textSize="20sp"
        android:textColor="@color/primaryDark"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Buyer Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/buyerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/buyerIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_buyer"
                app:tint="@color/buyerPrimary"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/buyerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Browse as Buyer"
                android:textSize="16sp"
                android:textColor="@color/primaryDark"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/buyerPrimary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Farmer Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/farmerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/farmerIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_farmer"
                app:tint="@color/farmerPrimary"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/farmerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Post Products as Farmer"
                android:textSize="16sp"
                android:textColor="@color/primaryDark"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/farmerPrimary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>